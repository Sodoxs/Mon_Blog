{# src/templates/view.html.twig #}

{% extends "accueil_blog.html.twig" %}

{% block title %} {{ parent() }} - article {% endblock %}

{% block h1 %} article : {{ id }} {% endblock %}

{% block sub_body %}
    <br>
    id : {{ id }} |
    {{ 'article.title'|trans }} : {{ article.title }} |
    {{ 'article.author'|trans }} : {{ article.author }} |
    {{ 'article.nb_views'|trans }} : {{ nbviews }} |
    {{ 'article.content'|trans }} : {{ article.content }} |
    <br><br>
    <div class="text-center">{{ 'categories'|trans }} : </div>
    <div class="text-center">
        {% for category in article.categories %}
            | {{ category.name }} |
        {% endfor %}
    </div>
    <br>
    <a class="btn btn-info" href="/blog/article/edit/{{ id }}">{{ 'article.edit'|trans }}</a>
    <a class="btn btn-danger" href="/blog/article/delete/{{ id }}">{{ 'article.delete'|trans }}</a>

{% endblock %}